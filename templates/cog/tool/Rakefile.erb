require 'rake/clean'
require 'rubygems'
require 'rubygems/package_task'
require 'rdoc/task'

Rake::RDocTask.new do |rd|
  rd.main = "API.rdoc"
  rd.rdoc_files.include("API.rdoc", "lib/**/*.rb")
  rd.title = '<%= @module_name %> API Docs'
end

spec = eval(File.read('<%= @name %>.gemspec'))

Gem::PackageTask.new(spec) do |pkg|
end
